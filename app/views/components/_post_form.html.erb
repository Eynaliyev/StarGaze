<% if user_signed_in? %>
<div class="panel panel-default post-form-panel">
  <div class="panel-body row">
    <div class="col-sm-1">
      <img src="/logo231.png" class="rounded-img" height="35px" width="35px"></img>
    </div>
    <div class="col-sm-11">
      <%= form_for(@newPost) do |f| %>
      <% if @newPost.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@newPost.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% @newPost.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="field" style="margin-left: 10px;">
        <%= f.text_field :content, autofocus: true, class: "form-control" %>
        <%= hidden_field_tag 'recipient_id', @user.id %>
        <span type="button" class="btn btn-submit" style="float: right; margin-top: 3px;"><%= f.submit "Add Post", class: "btn btn-primary" %></span>
      </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>
