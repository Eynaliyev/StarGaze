<% if user_signed_in? %>
  <div class="panel panel-default post-form-panel">
    <div class="panel-body row">
      
      <div class="col-sm-1">
        <img src="/logo231.png" class="rounded-img" height="35px" width="35px"></img>
      </div>
      <div class="col-sm-11">
        <%= form_for(@newListing) do |f| %>
          <% if @newListing.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@newListing.errors.count, "error") %> prohibited this listing from being saved:</h2>
              <ul>
                <% @newListing.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
            <div class="field" style="margin-left: 10px;">
              <%= f.text_field :name, autofocus: true, class: "form-control input-lg", placeholder: 'Title, ex: Looking for someone to go to gym with' %>
              </br>
              <%= f.text_area :description, autofocus: true, class: "form-control", placeholder: "Description, ex: I'm going to this gym on 5th street and am looking for someone to joing me" %>
            </div>
            <div style="margin-top: 21px;"><%= f.collection_select :category_id, Category.all, :id, :name, {
                        include_blank: "Please select category..." }, { class: 'form-control' } %></div>
            <span type="button" class="btn btn-submit" style="float: right; margin-top: 3px;"><%= f.submit "Add Listing", class: "btn btn-primary" %></span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>