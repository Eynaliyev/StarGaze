<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-image hide-panel-body">  
        <img src="/cover.png" class="panel-image-preview">
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-sm-2"><img src="/logo231.png" height="50px" width="50px" class="rounded-img home-avatar"></div>
          <div class="col-sm-10">
            <h4 style="text-align: center;"><%= current_user.username %></h4>
          </div>
          <div class="col-sm-12" style="margin-top: 10px;">
            <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">
              POSTS<br>
              <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.posts.count %></h6>
            </div>
            <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">
              FOLLOWERS<br>
              <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.followers.count %></h6>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <h5 style="color: grey; font-size: 125%;">Consider following:</h5>
        <% for @u in @toFollow do %>
        <p style="font-wight: bold; opacity:0.85;"><a href="/user/<%= @u.id %>"><%= @u.username %></a></p>
        <% end %>
      </div>
    </div>
    <!--
      <div class="panel panel-default">
        <div class="panel-body">
          <h5 style="color: grey; font-size: 125%;">Trends</h5>
          <a href="">#Trend #1</a><br>
          <span style="color: grey;">31k Votes</span><br><br>
          <a href="">#Trend #2</a><br>
          <span style="color: grey;">25k Votes</span><br><br>
          <a href="">#Trend #3</a><br>
          <span style="color: grey;">16k Votes</span><br><br>
        </div>
      </div> -->
  </div>
  <div class="col-xs-6">
    <br><br>
    <% for @p in @posts %>
    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-1">
          <img src="/logo231.png", class="rounded-img", height="50px", width="50px"></img>
        </div>
        <div class="col-sm-11">
          <p class="post-title"><span class="post-owner"><a href="/user/<%= User.find(@p.user_id).id %>"><%= User.find(@p.user_id).username %></a> to <a href="/user/<%= User.find(@p.recipient_id).id %>"><%= User.find(@p.recipient_id).username %> </a></span> <span class=post-creation>- <%= @p.created_at.to_formatted_s(:short) %></span></p>
          <p class="post-content"><%= @p.content %></p>
        </div>
        <div class="col-sm-12">
          <p class="post-links">
          <div class="col-sm-2">
            <span class="glyphicon glyphicon-menu-up g-links" aria-hidden="true"></span>
            <span class="counter" aria-hidden="true">100</span>
          </div>
          <div class="col-sm-2">
            <span class="glyphicon glyphicon-menu-down g-links" aria-hidden="true"></span>
            <span class="counter" aria-hidden="true">100</span>    
          </div>
          <div class="col-sm-4">
            <span class="glyphicon glyphicon-share g-links" aria-hidden="true"></span>
            <span class="counter" aria-hidden="true">Comment</span>
          </div>
          <div class="col-sm-4">
            <span class="glyphicon glyphicon-share g-links" aria-hidden="true"></span>
            <span class="counter" aria-hidden="true">Share</span>
          </div>
          </p>
        </div>
      </div>
    </div>
    <% end %>
    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-12">
          <center>
            <a href="#">
              <img src="/infinity180.png", style="height:25px; width: 77px">
              <p class="opacity: 0.7;">Back to top</p>
            </a>
          </center>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
