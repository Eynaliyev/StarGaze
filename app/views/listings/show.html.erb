<div class="row">
  <div class="col-xs-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <h5 style="color: grey; font-size: 125%;"><%= @listing.name %>:</h5>
        <p style="font-wight: bold; opacity:0.85;">Listing show page - listings details, with comments</p>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
        <h5 style="color: grey; font-size: 125%;">Trends</h5>
        <a href="">#Trend #1</a><br>
        <span style="color: grey;">31k Votes</span><br><br>
        <a href="">#Trend #2</a><br>
        <span style="color: grey;">25k Votes</span><br><br>
        <a href="">#Trend #3</a><br>
        <span style="color: grey;">16k Votes</span><br><br>
      </div>
    </div>
  </div>
  <div class="col-xs-6">
    <br><br>
    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-1">
          <img src="/logo231.png", class="rounded-img", height="50px", width="50px"></img>
        </div>
        <div class="col-sm-11">
          <p class="post-title">
            <span class="post-owner"><a href="/user/<%= User.find(@listing.user_id).id %>">
            <%= User.find(@listing.user_id).username %></a></span>
            <span class="post-creation">- <%= @listing.created_at.to_formatted_s(:short) %></span>
          </p>
          <h2 class="post-content"><%= @listing.name %></h2>
          <p class="post-content"><%= @listing.description %></p>
        </div>
        <div class="col-sm-12">
          <p class="post-links">
          <div class="col-sm-4">
            <span class="glyphicon glyphicon-menu-up g-links" aria-hidden="true"></span>
            <span class="counter" aria-hidden="true">100</span>
          </div>
          <div class="col-sm-4">
            <span class="glyphicon glyphicon-menu-down g-links" aria-hidden="true"></span>
            <span class="counter" aria-hidden="true">100</span>    
          </div>
          <div class="col-sm-4">
            <span class="glyphicon glyphicon-share g-links" aria-hidden="true"></span>
            <span class="counter" aria-hidden="true">Share</span>
          </div>
          </p>
          <% if user_signed_in? %>
          <% if current_user.id == @listing.user_id %>
          <%= link_to "Edit", edit_listing_path(@listing) %>
          <% end %>                  
          <% if current_user.id == @listing.user_id %>
          <%= link_to "Delete", listing_path(@listing), method: "delete" %>
          <% end %>
          <% end %>             
        </div>
      </div>
    </div>
    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-12">
          <center>
            <a href="#">
              <img src="/infinity180.png", style="height:25px; width: 77px">
              <p class="opacity: 0.7;">Back to top</p>
            </a>
          </center>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-3">
    <% if user_signed_in? %>
    <div class="panel panel-default">
      <div class="panel-body">
        <h5 style="color: grey; font-size: 125%;">Consider following:</h5>
        <% for @u in @toFollow do %>
        <p style="font-wight: bold; opacity:0.85;"><a href="/user/<%= @u.id %>"><%= @u.username %></a></p>
        <% end %>
      </div>
    </div>
    <% end %>
    <div class="panel panel-default">
      <div class="panel-body">
        <p style="opacity: 0.5; font-size:90%;">Â© 2016 Happy Planet About  Help  Blog  Status  Jobs  Terms  Privacy  Cookies  Ads  info  Brand  Advertise  Businesses  Media  Developers  Directory</p>
      </div>
    </div>
  </div>
</div>
